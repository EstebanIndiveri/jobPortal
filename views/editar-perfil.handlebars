<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label>Nombre</label>
            
            <input value={{nombre}} type="text" name="nombre" placeholder="Tu nombre" >
        </div>
        <div class="campo">
            <label>E-mail</label>
            <input value={{email}} type="email" name="email" placeholder="Tu Email" >
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Contraseña">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>